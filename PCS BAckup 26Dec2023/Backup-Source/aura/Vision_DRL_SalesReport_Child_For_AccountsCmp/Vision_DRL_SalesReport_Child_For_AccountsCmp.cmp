<aura:component controller = "Vision_All_DRLSalesReport_Ctrl" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,lightning:isUrlAddressable" access="global" >
    
    <lightning:navigation aura:id="navService"/>
    <aura:attribute name="pageReference" type="Object"/>
    <aura:attribute name="salesdl" type="Decimal" />
    <aura:attribute name="volume" type="Decimal" />
    <aura:attribute name="tptdl" type="Decimal" />
    <aura:attribute name="tptperc" type="Decimal" />
    <aura:attribute name="singleRec" type="Object" />
    <aura:attribute name="eachRec" type="Object" />
    <aura:attribute name="rowIndex" type="Integer" />
    <aura:attribute name="classS" type="string" />
    <aura:attribute name="classV" type="string" />
    <aura:attribute name="classT" type="string" />
    <aura:attribute name="classP" type="string" />
    <aura:attribute name="isSalesLessThanZero" type="boolean" />
    <aura:attribute name="isunitsLessThanZero" type="boolean" />
    <aura:attribute name="isTPTLessThanZero" type="boolean" />
    <aura:attribute name="isTPTPercentLessThanZero" type="boolean" />
    <aura:attribute name="parent" type="Aura.Component"/>
    <aura:attribute name="comparison" type="String" />
    <aura:attribute name="isRxChecked" type="boolean" />
    <aura:attribute name="isSRxChecked" type="boolean" />
    <aura:attribute name="isOtcChecked" type="boolean" />
    <aura:attribute name="isEXTChecked" type="boolean"/>
     <aura:attribute name="ShowINT" type="boolean"/>
    <aura:attribute name="showTPT" type="boolean"/>
    <aura:attribute name="showItem" type="boolean"/>
        <aura:attribute name="isAsc" type="boolean" default="true"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
      <tr>
                          <td>{!v.rowIndex}</td>
                         <td style="font-size: 14px; font-weight: bold;width:20px">
                         <a onclick="{!c.callParentMethod}">
                             <lightning:icon class="green" iconName="utility:graph" alternativeText="Go to Graph" size="x-small" title="{!'Redirected to Net Sales graph for ' + v.eachRec.custName}"/>
                         </a> &nbsp;
                         <aura:if isTrue="{!v.eachRec.custId != null}">
                             <a onclick="{!c.redirectToProducts}">
                                 <lightning:icon class="green" iconName="utility:list" alternativeText="Redirect to Products" size="x-small" title= "{!'Redirected to all products under ' + v.eachRec.custName}" />
                             </a> &nbsp;&nbsp;
                             <lightning:formattedUrl value="{!'/' + v.eachRec.custId}"  label="{!v.eachRec.custName}" target="_blank" />
                             <aura:set attribute="else">
                                {!v.eachRec.pfamily}
                            </aura:set>
                             </aura:if>
                         </td>
                         <td class="slds-text-align_center tip2"><lightning:icon class="{!v.classV}" 
                                                                                 iconName="utility:light_bulb" 
                                                                                 size="x-small"/>
                             <span>
                                 <lightning:formattedNumber value="{!(v.eachRec.units - v.eachRec.UnitsPrev)}" minimumFractionDigits="0" maximumFractionDigits="0"/>
                             </span>
                         </td>
                         <td class="slds-text-align_center tip1"><lightning:icon class="{!v.classS}" 
                                                                                 iconName="utility:light_bulb" 
                                                                                 size="x-small"/>
                             <span>
                                 <lightning:formattedNumber value="{!(v.eachRec.salesdl - v.eachRec.SalesDollarPrev)}" style="currency" minimumFractionDigits="0" maximumFractionDigits="0"/>
                             </span>
                         </td>
                         <td class="slds-text-align_center tip3"><lightning:icon class="{!v.classT}" 
                                                                                 iconName="utility:light_bulb" 
                                                                                 size="x-small"/>
                             <span>
                                 <lightning:formattedNumber value="{!(v.eachRec.tptdollar - v.eachRec.TPTDollarPrev)}" style="currency" minimumFractionDigits="0" maximumFractionDigits="0"/>
                             </span>
                         </td>
                         <td class="slds-text-align_center tip4"><lightning:icon class="{!v.classP}"
                                                                                 iconName="utility:light_bulb" 
                                                                                 size="x-small"/>
                             <span>
                                 <lightning:formattedNumber value="{!(v.eachRec.tptpct - v.eachRec.TPTPctPrev)}" style="percent-fixed" minimumFractionDigits="0" maximumFractionDigits="2"/>
                             </span>
                         </td>
 					 <td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.UnitsPrev}"  minimumFractionDigits="0" maximumFractionDigits="0"/></td>
        			<td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.units}"  minimumFractionDigits="0" maximumFractionDigits="0"/></td>
                    <aura:if isTrue="{!v.isunitsLessThanZero}">
                        <td class="slds-text-align_right slds-text-color_error"><lightning:formattedNumber value="{!v.eachRec.trendingVolume}" style="percent"  minimumFractionDigits="0" maximumFractionDigits="2"/></td>
                        <aura:set attribute="else">
                         <td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.trendingVolume}" style="percent"  minimumFractionDigits="0" maximumFractionDigits="2"/></td>
                        </aura:set>
                   	</aura:if>
                    <td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.SalesDollarPrev}" style="currency" currencyCode="USD" minimumFractionDigits="0" maximumFractionDigits="0"/></td>
        			<td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.salesdl}" style="currency" currencyCode="USD" minimumFractionDigits="0" maximumFractionDigits="0"/></td>
					 <aura:if isTrue="{!v.isSalesLessThanZero}">
                        <td class="slds-text-align_right slds-text-color_error">&nbsp;&nbsp;<lightning:formattedNumber value="{!v.eachRec.trendingSales}" style="percent" minimumFractionDigits="0" maximumFractionDigits="2"/></td>
                        <aura:set attribute="else">
                    	<td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.trendingSales}" style="percent" minimumFractionDigits="0" maximumFractionDigits="2"/></td>
                         </aura:set>
                     </aura:if>
                   <td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.TPTDollarPrev}" style="currency" currencyCode="USD" minimumFractionDigits="0" maximumFractionDigits="0"/></td>
        			<td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.tptdollar}" style="currency" currencyCode="USD" minimumFractionDigits="0" maximumFractionDigits="0"/></td>
					<aura:if isTrue="{!v.isTPTLessThanZero}">
                    <td class="slds-text-align_right slds-text-color_error"><lightning:formattedNumber value="{!v.eachRec.trendingTPT}" style="percent" minimumFractionDigits="0" maximumFractionDigits="2"/></td>
                    	<aura:set attribute="else">
                    		<td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.trendingTPT}" style="percent" minimumFractionDigits="0" maximumFractionDigits="2"/></td>
                        </aura:set>
                     </aura:if>
                    <td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.TPTPctPrev}" style="percent-fixed"  minimumFractionDigits="0" maximumFractionDigits="2"/></td>
       				 <td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.tptpct}" style="percent-fixed"  minimumFractionDigits="0" maximumFractionDigits="2"/></td>
					 <aura:if isTrue="{!v.isTPTPercentLessThanZero}">
                    <td class="slds-text-align_right slds-text-color_error"><lightning:formattedNumber value="{!v.eachRec.trendingTPTPercent}" style="percent-fixed"  minimumFractionDigits="0" maximumFractionDigits="2"/></td>
                    	<aura:set attribute="else">
                         <td class="slds-text-align_right"><lightning:formattedNumber value="{!v.eachRec.trendingTPTPercent}" style="percent" minimumFractionDigits="0" maximumFractionDigits="2"/></td>
                         </aura:set>
                     </aura:if>
                     </tr>
              
           
       
</aura:component>