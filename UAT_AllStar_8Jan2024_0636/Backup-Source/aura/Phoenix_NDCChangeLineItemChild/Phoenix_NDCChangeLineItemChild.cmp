</td>
         
          <td class="slds-text-align--right"><lightning:formattedNumber value="{!v.singleRec.Phoenix_Contract_Price__c}" style="currency" currencyCode="USD" maximumFractionDigits="2"></lightning:formattedNumber>
</td>
       
        
        <td class="slds-text-align--right"><lightning:formattedNumber value="{!v.singleRec.Phoenix_Awarded_Quantity__c}"  maximumFractionDigits="0"></lightning:formattedNumber>
</td>
          <td class="slds-text-align--right"><lightning:formattedNumber value="{!v.singleRec.Phoenix_3_Months_Annualized_Quantity__c}"  maximumFractionDigits="0"></lightning:formattedNumber>
</td>
       
  <td class="slds-text-align--right"><lightning:formattedNumber value="{!v.singleRec.Phoenix_Actual_Quantity_Last_12m__c}"  maximumFractionDigits="0"></lightning:formattedNumber>
</td>
         <td class="slds-text-align--right"><lightning:formattedNumber value="{!v.singleRec.Phoenix_Var_Awarded_vs_3m_Annualized_Qty__c}"  maximumFractionDigits="0"></lightning:formattedNumber>
</td>
         <td class="slds-text-align--right"><lightning:formattedNumber value="{!v.singleRec.Phoenix_Var_Awarded_vs_12m_Actual_Qty__c}"  maximumFractionDigits="0"></lightning:formattedNumber>
</td>
         <td  class="slds-text-align--right"><lightning:formattedNumber value="{!v.singleRec.Phoenix_Monthly_Var_Awarded_v_s_3m_Annua__c}"  maximumFractionDigits="0"></lightning:formattedNumber>
</td>
         <td  class="slds-text-align--right"><lightning:formattedNumber value="{!v.singleRec.Phoenix_Monthly_Var_Awarded_v_s_12m_Actu__c}"  maximumFractionDigits="0"></lightning:formattedNumber>
</td>
                         
          <aura:if isTrue="{!v.BidAprrovalStatus=='Draft'}">
          <td ondblclick="{!c.inlineEditSubmitterRemarks}" class="slds-cell-edit">
                <span class="slds-grid slds-grid_align-spread">
                    <!-- show input and output section based on boolean flag --> 
                    <aura:if isTrue="{!v.SubmitterRemarksEditMode == false}">
                        <span class="slds-truncate" title="Name">{!v.singleRec.Phoenix_Submitter_Remarks__c}</span>
                        <button onclick="{!c.inlineEditSubmitterRemarks}" class="slds-button slds-button_icon slds-cell-edit__button slds-m-left_x-small" tabindex="0" title="Edit Name">
                          <lightning:icon iconName="utility:edit" size="xx-small" alternativeText="edit"/>
                        </button>
                       
                        <!-- Inline Edit Section in else case-->  
                        <aura:set attribute="else">
                            <section  tabindex="0" class="slds-popover slds-popover_edit" role="dialog" style="position: absolute; top: 0px">
                                <div class="slds-popover__body">
                                    <div class="slds-form-element slds-grid slds-wrap">
                                        <div class="slds-form-element__control slds-grow">
                                            <ui:inputText class="slds-input inputFieldWidth"
                                                          labelClass="slds-form-element__label slds-form-element__label_edit slds-no-flex"
                                                          aura:id="SubmitterRemarks"
                                                          blur="{!c.closeNameBox}"
                                                          change="{!c.onNameChange}"
                                                          required="true"
                                                          value="{!v.singleRec.Phoenix_Submitter_Remarks__c}" />
                                        </div>
                                    </div>
                                </div>
                                <span id="form-end" tabindex="0"></span>
                            </section>  
                        </aura:set>  
                    </aura:if> 
                </span>
            </td>
        <aura:set attribute="else">
             <td>
            {!v.singleRec.Phoenix_Submitter_Remarks__c}
        </td>
              </aura:set>
        </aura:if>
        
        
        
