                                                      aura:id="scmRemarks"
                                                      blur="{!c.closeNameBox}"
                                                      change="{!c.onNameChange}"
                                                      required="true"
                                                      value="{!v.singleRec.Phoenix_Remarks__c}" />
                                    </div>
                                </div>
                            </div>
                            <span id="form-end" tabindex="0"></span>
                        </section>  
                    </aura:set>  
                </aura:if> 
            </span>
        </td>
            <aura:set attribute="else" >
                 <td>
                    {!v.singleRec.Phoenix_SCM_Approval_Y_N__c}
                </td>
                  <td class="slds-text-align--right">
                    {!v.singleRec.Phoenix_Lead_Time__c}
                </td>
                <td>
                    {!v.singleRec.Phoenix_Remarks__c}
                </td>
            </aura:set>
        </aura:if>
